<Window x:Class="BIMcollab_BCF_WPF_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIMcollab_BCF_WPF_MVVM"
        xmlns:views="clr-namespace:BIMcollab_BCF_WPF_MVVM.Views"
        mc:Ignorable="d"
        Title="BIMcollab Playground" Height="850" Width="800" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="350" />
            <RowDefinition Height="150" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <views:ProjectView x:Name = "ProjectViewControl" Grid.Row="0"/>
        <views:IssueView x:Name = "IssueViewControl" Grid.Row="1"/>
        <views:IssueOverviewView x:Name = "IssueOverviewViewControl" Grid.Row="2"/>
        <views:CommentView x:Name = "CommentViewControl" Grid.Row="3"/>
    </Grid>
</Window>
